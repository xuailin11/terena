#!/bin/bashi
i=1
j=0
while :
do    
 num=$[RANDOM%100]
  while :
   do
     read -p "第$i次猜数:" cai
     if [ $cai == q ];then
     echo "共计猜了$i次,猜对了$j次"
        exit
     fi
     if [ $num -gt $cai ];then
        echo "猜小了"
        let i++
     elif [ $num -lt $cai ];then
        echo "猜大了"
        let i++
     else
        echo "猜对了"
        let i++
        let j++
        break
     fi
   done
done

